<h1>
  Permissions for <%= @document.title %>
</h1>

<%= form_tag action: 'create' do %>
  <div>
  <h2> User </h2>
  <% @users.each do |user| %>
    <%= radio_button :permission, :user_id, user.id %> 
    <%= label :user_id, user.email %>
  <% end %>
  </div>
  <%= hidden_field :permission, :document_id, :value => @doc_id %> 
    <%= radio_button :permission, :ability, 'READ' %> 
    <%= label :document, 'READ' %>
    <%= radio_button :permission, :ability, 'WRITE' %> 
    <%= label :document, 'WRITE' %>
  
  <%= submit_tag 'Add Permission' %>
<% end %>
